<Page x:Class="Registro.Planillas.WPF.ListaEmpleados"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Registro.Planillas.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListaEmpleados"
      GotFocus="cargarTabla">

    <StackPanel Background="White">
        <Label Content="LISTA DE EMPLEADOS" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal" Height="50" Margin="0,20,0,0">
            <Button Content="Agregar" Width="120" Margin="0,0,20,0" Background="#FF219E1A" Foreground="White" BorderBrush="{x:Null}" FontSize="14" Click="agregarEmpleado"></Button>
            <Button Content="Editar" Width="120" Margin="0,0,20,0" Background="#FF2D9CA9" Foreground="White" BorderBrush="{x:Null}" FontSize="14"></Button>
            <Button Content="Eliminar" Width="120" Background="#FFE10C0C" Foreground="White" BorderBrush="{x:Null}" FontSize="14"></Button>
        </StackPanel>
        <DataGrid x:Name="empleadosDataGrid" Margin="0 20 0 0" Height="250" Loaded="cargarTabla"/>

    </StackPanel>
</Page>
